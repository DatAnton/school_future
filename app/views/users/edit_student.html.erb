<h2>Edit Student</h2>

<%= form_for(@user, url: update_student_form_path, html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label "First name" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", autofocus: true, style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label "Last name" %><br />
    <%= f.text_field :last_name, autocomplete: "last_name", style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :form %><br />
    <%= select_tag :form_name, options_for_select(build_form_arr(@forms), find_form(@user)), style: "width:200px" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary', style: 'margin: 20px' %>
  </div>
<% end %>
<%= link_to 'Back', :back %>
