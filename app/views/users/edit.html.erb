<h2>Edit User</h2>

<%= form_for(@user, url: update_user_path, html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label "First name" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", autofocus: true, style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label "Last name" %><br />
    <%= f.text_field :last_name, autocomplete: "last_name", style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :user_type %><br />
    <%= select_tag :user_type, options_for_select(['student', 'teacher', 'admin'], @user.user_type), style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", style: "width:200px" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width:200px" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary', style: 'margin: 20px' %>
  </div>
<% end %>

<%= link_to 'Back', :back %>
