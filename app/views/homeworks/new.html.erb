<h1>New homework!</h1>

<%= form_for(@homework) do |f| %>
  <div class="field">
    <%= f.label :homework %><br />
    <%= f.text_area :homework, style: "width:200px" %>
  </div>

  <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>

  <div class="actions">
    <%= f.submit "New", class: 'btn btn-primary', style: 'margin: 20px' %>
  </div>
<% end %>
