<h1>Create new Note</h1>
<div class="form-group">
    <%= form_for(@note) do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.label :content, for: "exampleFormControlTextarea1" %>
      <%= f.text_area :content, class: "form-control", id: "exampleFormControlTextarea1", rows: 3 %>

      <%= f.submit "Create new Note", class: "btn btn-primary", style: "margin: 20px 10px 10px 10px" %>
    <% end %>
</div>
